<%= form_with(model: @board, local: true, class: 'new_board') do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <!-- <label for="board_title">タイトル</label>
    <input class="form-control" type="text" name="board[title]" id="board_title" /> -->
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <!-- <label for="board_body">本文</label>
    <textarea class="form-control" row="10" style="height: 200px" name="board[body]" id="board_body"></textarea> -->
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: '10' %>
  </div>
  <div class="form-group">
    <!-- <label for="board_body">本文</label>
    <textarea class="form-control" row="10" style="height: 200px" name="board[body]" id="board_body"></textarea> -->
    <%= f.label :board_image %>
    <%= f.file_field :board_image, class: 'form-control', onchange: 'previewImage(preview)' %>
    <%= f.hidden_field :board_image_cache %>
  </div>
  <div class="form-group">
    <%= image_tag @board.board_image.url, id: 'preview' %>
  </div>
  <!-- <input type="submit" name="commit" value="作成" class="btn btn-primary" data-disable-with="作成" /> -->
  <%= f.submit (t 'defaults.create'), class: 'btn btn-primary' %>
<% end %>
