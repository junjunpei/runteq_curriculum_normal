<% content_for(:title, t('.title')) %>
<div class="container mb-5 pt-2">
  <h1><%= t('.title') %></h1>
  <div class="row">
    <div class="col-md-12 mb-3">
      <%= render 'search_form', url: admin_users_path %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-striped">
        <thread>
          <tr>
            <th scope="col"><%= t('defults.id') %></th>
            <th scope="col"><%= t(User.human_attribute_name(:full_name)) %></th>
            <th scope="col"><%= t('defaults.authority') %></th>
            <th scope="col"><%= t('defaults.created_at') %></th>
            <th scope="col"></th>
          </tr>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.decorate.full_name, admin_user_path(user) %></td>
              <td><%= user.role %></td>
              <td><%= user.created_at %></td>
              <td>
                <%= link_to t('defaults.edit'), edit_admin_user_path(user), class: 'btn btn-success' %>
                <%= link_to t('defaults.delete'), admin_user_path(user), class: 'btn btn-danger', method: :delete, data: { confirm: "ユーザー「#{user.decorate.full_name}」を削除します。よろしいですか？" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @users %>
</div>
