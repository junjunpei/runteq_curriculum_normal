<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <div class="text-right mb-3">
        <%= link_to t('defaults.edit'), edit_admin_user_path(@user), class: 'btn btn-success' %>
        <%= link_to t('defaults.delete'), admin_user_path(@user), class: 'btn btn-danger', method: :delete, data: { confirm: "ユーザー「#{@user.decorate.full_name}」を削除します。よろしいですか？" } %>
      </div>
      <table class="table table-bordered bg-white">
        <tbody>
          <tr>
            <th scope="row"><%= t('defaults.id') %></th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th scope="row"><%= t('defaults.authority') %></th>
            <td><%= @user.role_i18n %></td>
          </tr>
          <tr>
            <th scope="row"><%= t('defaults.name') %></th>
            <td><%= @user.decorate.full_name %></td>
          </tr>
          <tr>
            <th scope="row"><%= t(User.human_attribute_name(:avatar)) %></th>
            <td><%= image_tag @user.avatar_url %></td>
          </tr>
          <tr>
            <th scope="row"><%= t('defaults.created_at') %></th>
            <td><%= @user.created_at %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
