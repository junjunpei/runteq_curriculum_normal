<% content_for(:title, (t '.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t '.title' %></h1>
      <%= form_with(model: @user, url: profile_path, local: true) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <!-- <label for="user_email">Email</label>
          <input class="form-control" type="email" name="user[email]" id="user_email" /> -->
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <!-- <label for="user_last_name">Last name</label>
          <input class="form-control" type="text" name="user[last_name]" id="user_last_name" /> -->
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <!-- <label for="user_first_name">First name</label>
          <input class="form-control" type="text" name="user[first_name]" id="user_first_name" /> -->
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <!-- <label for="board_body">本文</label>
          <textarea class="form-control" row="10" style="height: 200px" name="board[body]" id="board_body"></textarea> -->
          <%= f.label :avatar %>
          <%= f.file_field :avatar, onchange: 'previewImage()', class: 'form-control mb-3', accept: 'image/*' %>
          <%= f.hidden_field :avatar_cache %>
        </div>
        <div class='mt-3 mb-3'>
          <%= image_tag current_user.avatar.url,
                        class: 'rounded-circle',
                        id: 'preview',
                        size: '100x100' %>
        </div>
        <%# <input type="submit" name="commit" value="登録" class="btn btn-primary" data-disable-with="登録" /> %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
