<div class="row">
  <div class="col-lg-8 offset-lg-2">
    <table id="js-table-comment" class="table">
      <tr id="comment-25">
        <td style="width: 60px">
          <!-- <img class="rounded-circle" src="sample.jpg" width="50" height="50" /> -->
          <%= image_tag 'board_placeholder.png', class: 'rounded-circle', width: '50px', height: '50px' %>
        </td>
        <td>
          <h3 class="small"><%= comment.user.decorate.full_name %></h3>
          <div id="js-comment-25">
            <p><%= comment.body %></p>
          </div>
          <div style="display: none;">
            <textarea class="form-control mb-1"><%= comment.body %></textarea>
            <button class="btn btn-light"<%= t ('.cansell') %></button>
            <button class="btn btn-success"><%= t ('.update') %></button>
          </div>
        </td>
        <% if comment.user == current_user %>
          <td class="action">
            <ul class="list-inline justify-content-center" style="float: right;">
              <li class="list-inline-item">
                <!-- <a href="#">
                  <i class="fa fa-pencil"></i>
                </a> -->
                <%= link_to '#', id: 'button-edit-#{board.id}' do %>
                  <%= icon 'fa', 'pen' %>
                <% end %>
              </li>
              <li class="list-inline-item">
                <!-- <a href="#">
                  <i class="fa fa-trash"></i>
                </a> -->
                <%= link_to '#', id: 'button-delete-#{board.id}', method: :delete, data: {confirm: ''} do %>
                  <%= icon 'fas', 'trash' %>
                <% end %>
              </li>
            </ul>
          </td>
        <% end %>
      </tr>
    </table>
  </div>
</div>
