<tr id="comment-<%= comment.id %>">
  <td style="width: 60px">
    <!-- <img class="rounded-circle" src="sample.jpg" width="50" height="50" /> -->
    <%= image_tag 'board_placeholder.png', class: 'rounded-circle', width: '50px', height: '50px' %>
  </td>
  <td>
    <h3 class="small"><%= comment.user.decorate.full_name %></h3>
    <div id="js-comment-<%= comment.id %>">
      <p><%= comment.body %></p>
    </div>
    <!-- <div style="display: none;">
      <textarea class="form-control mb-1"><%= comment.body %></textarea>
      <button class="btn btn-light"<%= t ('.cansell') %></button>
      <button class="btn btn-success"><%= t ('.update') %></button>
    </div> -->
  </td>
  <% if comment.user == current_user %>
    <td class="action">
      <ul class="list-inline justify-content-center" style="float: right;">
        <li class="list-inline-item">
          <!-- <a href="#">
            <i class="fa fa-pencil"></i>
          </a> -->
          <%= link_to '#', id: "button-edit-#{comment.id}" do %>
            <%= icon 'fa', 'pen' %>
          <% end %>
        </li>
        <li class="list-inline-item">
          <!-- <a href="#">
            <i class="fa fa-trash"></i>
          </a> -->
          <%= link_to '#', id: "button-delete-#{comment.id}", method: :delete, data: {confirm: ''} do %>
            <%= icon 'fas', 'trash' %>
          <% end %>
        </li>
      </ul>
    </td>
  <% end %>
</tr>
